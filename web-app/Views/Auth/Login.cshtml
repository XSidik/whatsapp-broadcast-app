@model web_app.DTOs.Login

<div class="pt-4"><h2>Login</h2></div>

<div class="container-fluid d-flex justify-content-left">
    <div class="row w-100">
        <div class="col-12 col-md-6 col-lg-4">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary mb-1">Welcome Back</h2>
                        <p class="fs-6">Please sign in to your account</p>
                    </div>                    
                    <form asp-action="Login" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-semibold fs-6">Email Address</label>
                            <input asp-for="Email" class="form-control form-control-lg"/>
                            <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                        </div>
                        
                        <div class="mb-4">
                            <label asp-for="Password" class="form-label fw-semibold fs-6">Password</label>
                            <input asp-for="Password" type="password" class="form-control form-control-lg"/>
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>                        
                        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                            <i class="fas fa-sign-in-alt me-2"></i>Sign In
                        </button>                        
                    </form>
                </div>
            </div>           
        </div>
    </div>
</div>

